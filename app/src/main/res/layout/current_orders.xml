<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/currentSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="18dp"
        android:text="Test" />


    <TextView
        android:id="@+id/currentField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="15dp"
        android:layout_below="@+id/currentSender"
        android:text="Test"
        />

    <TextView
        android:id="@+id/currentDeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="13dp"
        android:layout_below="@+id/currentField"
        android:text="Test" />


    <TextView
        android:id="@+id/currenOrderstStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="13dp"
        android:layout_below="@+id/currentDeadline"
        android:text="Test" />


</RelativeLayout>