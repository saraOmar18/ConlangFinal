<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Customer.OrderDetails"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/Textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Order number:"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/orderNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="33dp"
        android:layout_marginRight="12dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:text="Translator name:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/Textview1"/>

    <TextView
        android:id="@+id/translatorName"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderNumber"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:text="TextView"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/Textview112"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="38dp"
        android:layout_below="@id/translatorName"
        android:text="Order date:"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/orderDate"
        android:layout_width="141dp"
        android:layout_height="25dp"
        android:layout_below="@id/Textview112"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="12dp"
        android:text="299-222-22222"
        android:textAlignment="viewEnd" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="374dp"
        android:layout_height="8dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="21dp"
        android:layout_below="@id/orderDate"
        app:layout_constraintBottom_toTopOf="@+id/textView19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Textview112"
        app:srcCompat="@drawable/devider" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="From:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/imageView8"
         />
    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_below="@id/textView19"
        android:text="To:"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_below="@id/textView20"
        android:text="Field:"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/from"
        android:layout_width="123dp"
        android:layout_height="21dp"
        android:layout_below="@id/imageView8"
        android:layout_marginLeft="273dp"
        android:layout_marginBottom="51dp"
        android:text="TextView"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView8"
        android:layout_alignEnd="@+id/from"
        android:layout_alignRight="@id/textView20"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="-353dp"
        android:text="TextView"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView21"
        android:layout_alignEnd="@+id/from"
        android:layout_marginTop="-22dp"
        android:layout_marginEnd="0dp"
        android:text="TextView"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="210dp"
        android:layout_marginTop="10dp"
        android:text="Document:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/textView21"
       />

    <Button
        android:id="@+id/document"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView8"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="84dp"
        android:text="@string/preview"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_below="@id/textview"
        android:text="Comment:"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="374dp"
        android:layout_height="8dp"
        android:layout_marginTop="29dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="21dp"
        android:layout_below="@id/textView26"
        app:srcCompat="@drawable/devider" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="248dp"
        android:layout_height="48dp"
        android:layout_below="@id/document"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-85dp"
        android:layout_marginEnd="12dp"
        android:text="TextView"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Price:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/imageView11"
        />

    <TextView
        android:id="@+id/Deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_below="@id/Price"
        android:layout_marginTop="10dp"
        android:text="Deadline:"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/TComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="Translator comment:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/Deadline"
       />

    <TextView
        android:id="@+id/price"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView11"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:text="TextView"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/deadline"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Price"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:text="TextView"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/Tcomment"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_below="@id/deadline"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:text="TextView"
        android:textAlignment="viewEnd" />

    <Button
        android:id="@+id/offers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="Offers" />

    <Button
        android:id="@+id/chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:text="Chat" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="322dp"
        android:layout_marginTop="500dp"
        android:text="Rate"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="259dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="181dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="497dp"
        android:numStars="5"
        android:stepSize=".5"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="157dp" />


</RelativeLayout>